@model List<HotelViewModel>



    <div class="container-fluid">




    @foreach( HotelViewModel hotel in Model)
    {
          <div  class="card h-20 mb-4 text-center"  style="max-height: 300px;  min-height:300px  ;width: 40%" >

                                                                                                                      
                                       <a asp-controller="Hotels"    asp-action="Index" asp-route-id="@hotel.hotels_id">                                                                          
                                       <img  src="@hotel.GetFotos()" alt="Page not found" style="width: 100%; height: 200px;  ">
                                        </a>                                                                             
                                       <a asp-controller="Hotels"    asp-action="Index" asp-route-id="@hotel.hotels_id"style="font-size: 16px;margin-bottom: 4px; color: black; text-decoration: none;">@hotel.title</a>
                                                                                                                                                         
                                                                                                                      
                                                                                                                    
                                   <h1 style="font-size: 10px;  ">@hotel.address </h1>
                                                                                                                      
                                </div>
    
    }



    </div>


