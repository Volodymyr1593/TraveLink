 @model TraveLink.Models.AppUserViewModel




@{
    ViewData["Title"] = "User Account";
}

<h2>User Account</h2>

<div class="card" style="width: auto; padding: 20px; border-radius: 10px; we box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
    <div style="display: flex; align-items: center;">
        <img src="/images/default-profile.png" alt="User Photo" style="width: 80px; height: 80px; border: 2px solid #000; margin-right: 20px;">
        <div>
            <h4>@Model.UserName</h4>
        </div>
    </div>
    <hr>
    <div class="form-group">
        <label asp-for="FirstName"></label>
        <p class="form-control-static">@Model.FirstName</p>
    </div>

    <div class="form-group">
        <label asp-for="LastName"></label>
        <p class="form-control-static">@Model.LastName</p>
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <p class="form-control-static">@Model.Email</p>
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber"></label>
        <p class="form-control-static">@Model.PhoneNumber</p>
    </div>
</div>
<h3 class="text-center">My Orders</h3>
<div class="card-body d-flex justify-content-center" style="border-radius: 10px; we box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">


   

        
        <table  style="we box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);width:100%; height:auto;">
            <thead style=" we box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">


   

                <tr>
                    <th class="text-center" style="border: 1px solid black">Hotel name</th>
                    <th class="text-center" style="border: 1px solid black">Adress</th>
                    <th class="text-center" style="border: 1px solid black">Check-in Date</th>
                    <th class="text-center" style="border: 1px solid black">Check-out Date</th>
                    <th class="text-center" style="border: 1px solid black">Adults</th>
                    <th class="text-center" style="border: 1px solid black">Children</th>
                    <th class="text-center" style="border: 1px solid black">Room</th>
                    <th class="text-center" style="border: 1px solid black">Room Type</t>
                    <th class="text-center" style="border: 1px solid black">Price</th>
                   
                 
                </tr>
            </thead>
            <tbody>

            @if (Model.Bookings != null)
            {
                @foreach (BookingModel order in Model.Bookings)
                {

                    <tr style="border: 1px solid black">
                    <td class="text-center" style="border: 1px solid black">@order.HotelName</td>
                    <td class="text-center" style="border: 1px solid black">@order.HotelAdress</td>           
                    <td class="text-center" style="border: 1px solid black">@order.CheckinDate</td>
                    <td class="text-center" style="border: 1px solid black">@order.CheckoutDate</td>
                    <td class="text-center" style="border: 1px solid black">@order.Adult</td>
                    <td class="text-center" style="border: 1px solid black">@order.Children</td>
                    <td class="text-center" style="border: 1px solid black">@order.Room</td>
                    <td class="text-center" style="border: 1px solid black">@order.RoomType</td>
                    <td class="text-center" style="border: 1px solid black">@order.TodayPrice</td>



                </tr>
                }
            }





            </tbody>
        </table>
        
        </div>

   



