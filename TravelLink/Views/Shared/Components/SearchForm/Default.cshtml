@model TraveLink.Models.HotelViewModel

<form method="post" asp-controller="Hotels" asp-action="Search">
    <div class="row g-2 align-items-center">
        <div class="col-md-3">
            <input type="text" asp-for="reserveModel.location" id="location" oninput="searchLocation()" placeholder="Enter location" class="form-control" required />
            <div id="suggestions" class="list-group" style="position: absolute; z-index: 999;"></div>
        </div>
        <div class="col-md-2">
            <input type="date" asp-for="reserveModel.checkindate" class="form-control" required />
        </div>
        <div class="col-md-2">
            <input type="date" asp-for="reserveModel.checkoutdate"  class="form-control" required />
        </div>
        <div class="col-md-3">
            <div class="dropdown">
                <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="guestsDropdown" data-bs-toggle="dropdown">
                    Guests
                </button>
                <ul class="dropdown-menu p-3">
                    <li class="d-flex align-items-center">
                        <label class="me-2">Adults:</label>
                        <button type="button" class="btn btn-outline-secondary btn-sm" onclick="changeGuests('adults', -1)">-</button>
                        <input type="number" asp-for="reserveModel.adult"  class="form-control text-center mx-2" value="1" min="1" readonly />
                        <button type="button" class="btn btn-outline-secondary btn-sm" onclick="changeGuests('adults', 1)">+</button>
                    </li>
                    <li class="d-flex align-items-center mt-2">
                        <label class="me-2">Children:</label>
                        <button type="button" class="btn btn-outline-secondary btn-sm" onclick="changeGuests('children', -1)">-</button>
                        <input type="number" asp-for="reserveModel.children"  class="form-control text-center mx-2" value="0" min="0" readonly />
                        <button type="button" class="btn btn-outline-secondary btn-sm" onclick="changeGuests('children', 1)">+</button>
                    </li>
                </ul>
            </div>
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary w-100">Search</button>
        </div>
    </div>
</form>
